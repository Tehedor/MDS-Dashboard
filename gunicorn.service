[Unit]
Description=Gunicorn instance to serve myapp
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/root/MDS-Dashboard
Environment="PORT=80"
ExecStart=/path/to/venv/bin/gunicorn -w 4 -b 0.0.0.0:$PORT app:server --pid /run/gunicorn.pid
PIDFile=/run/gunicorn.pid

[Install]
WantedBy=multi-user.target